{
    "makedir" : "MAKE/",
    "PDMO" : "../../",
    "incdir" : "inc/",
    "srctypes" : {
        "asm" : ["asm","s"],
        "cpp" : ["cpp","cxx"],
        "c" : ["c"]
    },
    "util" : {
        "cc" : "x86_64-elf-gcc",
        "cxx" : "x86_64-elf-g++",
        "as" : "x86_64-elf-as",
        "ld" : "x86_64-elf-ld"
    },
    "include" : {
        "kernel" : ["modules/klib/inc/","inc/"]
    },
    "args" : {
        "kernelNoWarn" : {
            "as" : [],
            "c++" : ["-Wno-literal-suffix","-Wno-pointer-arith"],
            "c" : [],
            "ld" : []
        },
        "permissive" : {
            "as" : [],
            "c++" : ["-fpermissive","-Wno-int-to-pointer-cast","-Wno-pointer-to-int-cast"],
            "c" : [],
            "ld" : []
        },
        "kernel" : {
            "as" : [],
            "c++" : ["-O0","","-fno-rtti","-fno-exceptions","-nostdlib","-ffreestanding","-fno-stack-protector","-fno-builtin","-nostartfiles","-Wunreachable-code"],
            "c" : ["-Wunreachable-code"],
            "ld" : ["-nostdlib"]
        },
        "dependency" : {
            "as" : ["-M","-MD"],
            "c++" : ["-MP","-MD"],
            "c" : [],
            "ld" : []
        },
        "system" : {
            "aarch64-OSX" : {
                "as" : [],
                "c++" : ["-march=x86-64"],
                "c" : ["-march=x86-64"],
                "ld" : []
            },
            "x86_64-gnu_linux" : {
                "as" : [],
                "c++" : ["-march=x86-64"],
                "c" : ["-march=x86-64"],
                "ld" : []
            }
        }
    },
    "kmods" : {
        "klib" : {
            "output" : "out/kernel/klib.elf64",
            "opath" : "build/klib/",
            "spath" : "modules/klib/",
            "lds" : "LDS/klib.ld",
            "inc" : ["kernel"],
            "args" : ["kernel","kernelNoWarn","dependency"]
        },
        "INIT" : {
            "output" : "out/kernel/INIT.elf64",
            "opath" : "build/INIT/",
            "spath" : "modules/INIT/",
            "lds" : "LDS/INIT.ld",
            "inc" : ["kernel"],
            "args" : ["kernel","kernelNoWarn","dependency","permissive"]
        },
        "FUNCDIS" : {
            "output" : "out/kernel/FUNCDIS.elf64",
            "opath" : "build/FUNCDIS/",
            "spath" : "modules/FUNCDIS/",
            "lds" : "LDS/FUNCDIS.ld",
            "inc" : ["kernel"],
            "args" : ["kernel","kernelNoWarn","dependency"]
        },
        "MALLOC" : {
            "output" : "out/kernel/MALLOC.elf64",
            "opath" : "build/MALLOC/",
            "spath" : "modules/MALLOC/",
            "lds" : "LDS/MALLOC.ld",
            "inc" : ["kernel"],
            "args" : ["kernel","kernelNoWarn","dependency"]
        },
        "gfs0.fs" : {
            "output" : "out/gfs0.fs.elf64",
            "opath" : "build/gfs0.fs/",
            "spath" : "modules/gfs0.fs/",
            "lds" : "LDS/gfs0.fs.ld",
            "inc" : [],
            "args" : []
        },
        "fat32.fs" : {
            "output" : "out/fat32.fs.elf64",
            "opath" : "build/fat32.fs/",
            "spath" : "modules/fat32.fs/",
            "lds" : "LDS/fat32.fs.ld",
            "inc" : [],
            "args" : []
        }
    }
}